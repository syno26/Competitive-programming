{
    "tasks": [
        {
            "type": "shell",
            "label": "g++-7 build active file",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "/usr/bin/g++-7",
            "args": [
                "-g",
                "-O0",
                "-std=c++14",
                "${file}",
                "-o",
                "problem.exe"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ],
    "version": "2.0.0"
}